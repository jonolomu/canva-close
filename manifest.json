{
  "manifest_version": 2,

  "name": "Canva Closer",
  "description": "This extension automatically closes the launched window from Canva links",
  "version": "0.1",

  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://canva.com/*",
        "https://*.canva.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
